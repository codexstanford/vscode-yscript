{
  "name": "yscript",
  "displayName": "yscript Language Tools",
  "description": "Tools for writing and working with yscript programs.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.68.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onCustomEditor:yscript.graph"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "yscript",
        "extensions": [
          ".ys",
          ".yscript"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "customEditors": [
      {
        "viewType": "yscript.graph",
        "displayName": "yscript Graph",
        "selector": [
          {
            "filenamePattern": "*.ys"
          },
          {
            "filenamePattern": "*.yscript"
          }
        ],
        "priority": "option"
      }
    ],
    "grammars": [
      {
        "language": "yscript",
        "scopeName": "source.yscript",
        "path": "./syntax/yscript.tmGrammar.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile:ts": "tsc -p ./",
    "compile:yaml": "npx js-yaml ./syntax/yscript.tmGrammar.yaml > ./syntax/yscript.tmGrammar.json",
    "compile": "npm run compile:ts && npm run compile:yaml",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.69.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.18.0",
    "glob": "^8.0.3",
    "js-yaml": "^4.1.0",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "web-tree-sitter": "^0.20.5"
  }
}
